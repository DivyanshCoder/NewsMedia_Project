<%- include('header'); -%>
<div class="parent">


<% var number = 0;%>
    <% posts.forEach(function(post) { %>

        <% number++%>
        <div  class="divider">
            
            <div class="container">
                <div class="product-img"> 
                  
                  <img src="<%=post.image %>"
                    alt=""
                  />
                  <div>
    
                      <h1><%=post.title%></h1>
                  </div>
                </div>
                <div class="product-desc">
                  <div class="product-text">
                   
                    <h2><%=post.postAt%></h2>
                    <p>
                        <%=post.content%>
                    </p>
                  </div>
                  <div class="product-price">
                    <!-- <p><span>99.9 $</span></p> -->
                    <a href="<%=post.readMore%>">Read More</a>
                  </div>
                </div>
                <button onclick="liked('<%=number%>','<%=dataOffset%>','<%=postData.likes%>')"  class="btn green" > <i class="fa fa-thumbs-up fa-lg" aria-hidden="true"></i></button>
                
                  <p class="btn"> <%=postData.likes%> </p>
                
              <button  value="<%=number%>" class="btn red" > <i class="fa fa-thumbs-down fa-lg" aria-hidden="true"></i></button>
              <p class="btn"> <%=postData.dislikes%> </p>
              <button  value="<%=number%>" class="btn" > <i class="fa fa-comment fa-lg"></i> </button>
              
              </div>
        


              <!-- liked and dislike button -->

              
        </div>
         
    

        <% }); %>
</div>
<%- include('footer'); -%>