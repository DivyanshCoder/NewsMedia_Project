<%- include('header'); -%>


    <% posts.forEach(function(post) { %>

      
        <div class="divider">
            <div class="container">
                <div class="product-img"> 
                  <img src="<%=post.image %>"
                    alt=""
                  />
                  <div>
    
                      <h1><%=post.title%></h1>
                  </div>
                </div>
                <div class="product-desc">
                  <div class="product-text">
                   
                    <h2><%=post.postAt%></h2>
                    <p>
                        <%=post.content%>
                    </p>
                  </div>
                  <div class="product-price">
                    <!-- <p><span>99.9 $</span></p> -->
                    <a href="<%=post.readMore%>">Read More</a>
                  </div>
                </div>
              </div>
        
        </div>
         
    

        <% }); %>

<%- include('footer'); -%>